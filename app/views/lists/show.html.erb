<div class="container">

<h2><%= @list.name %></h2>


  <%= link_to "New bookmark", new_list_bookmark_path(@list) %>

    <% @list.bookmarks.each do |item| %>
    <%= item.movie.title %>
    <%= item.movie.overview %>
    <%= item.movie.poster_url %>
    <%= item.movie.rating %>
    <%= item.comment %>

    <% end %>

  <%= link_to "Back", lists_path %> |
  <%= link_to "Delete",
    list_path(@list),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>

</div>







