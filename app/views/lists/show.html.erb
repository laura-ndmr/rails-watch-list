<div class=navbar>
   <%= link_to "My list", lists_path, class: 'btn' %>

  <%= link_to "New", new_list_path, class: 'btn' %>
</div>

  <div class="banner_show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
   url('<%=cl_image_path @list.photo.key%>')">
    <div class="addnewlist">
      <h1><%= @list.name %></h1>
    </div>
  </div>

<div class="container">



<div class=card_container>
    <% @list.bookmarks.each do |item| %>
  <div class=card_bookmark>
    <%= image_tag item.movie.poster_url, alt: "poster-image", class: 'img_movie' %>

    <div class=columninfo>
      <p>
        <div id=title>
          <%= item.movie.title %> - <%= item.movie.rating %> <i class="fa-solid fa-star"></i>
        </div>
        <div>

        <div id=comment>Overview:</div> <%= item.movie.overview %>
        </div>
        <div id=comment>
          <i class="fa-solid fa-comment"></i> <%= item.comment %>
        </div>
      </p>

    </div>
   </div>
    <% end %>
</div>

  <%= link_to "New bookmark", new_list_bookmark_path(@list), class: 'btn' %>
  <%= link_to "Back", lists_path, class: 'btn' %> |
  <%= link_to "Delete",
    list_path(@list), class: 'btn',
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>

</div>
